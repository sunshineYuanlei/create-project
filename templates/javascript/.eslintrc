{
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "parser": "babel-eslint"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "semi": ["error", "always"],
    "quote": ["warn", "double"],
    // allow async-await
    "no-console": "off",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "space-before-function-paren": [
      "error",

      { "anonymous": "always", "named": "never" }
    ],
    "generator-star-spacing": "off"
    // allow debugger during development
    // ...
  },
  "plugins": ["import", "vue"],
  "extends": ["plugin:vue/essential", "standard"]
}
